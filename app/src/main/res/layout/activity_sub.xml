<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.techtron.cabcaller.SubActivity">

    <RelativeLayout
        android:id="@+id/relativeViewSubActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewDriver"
            android:transitionName="driver"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/driver"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/textViewFirstName"
            android:transitionName="firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="BUSCEMI"
            android:textColor="@color/bg_purple"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewDriver"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textViewPlateNum"
            android:transitionName="plateNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" C R 4 - 3 Y 3 "
            android:textColor="@color/text_bg"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewFirstName"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textViewPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="869 - 555 - 3323"
            android:textColor="@color/text_bg"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewPlateNum"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textViewPickup"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="WORTH AVENUE"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/background"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewPhoneNum"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/textViewTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textColor="@color/text_bg"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewPickup"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/textViewDropoff"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="CALLE OCHO"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/background"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewTo"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeViewSubBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeViewSubActivity"
        android:layout_marginTop="20dp"
        android:background="@color/bg_purple">

        <TextView
            android:id="@+id/textViewPredictedCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PREDICTED COST"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/imageViewPriceBg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/price_bg"
            android:layout_below="@id/textViewPredictedCost"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80$"
            android:textStyle="bold"
            android:textColor="@color/bg_purple"
            android:textSize="30sp"
            android:layout_below="@+id/textViewPredictedCost"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"/>

    </RelativeLayout>

</RelativeLayout>



